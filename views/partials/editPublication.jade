div
  div(class="row-fluid")
    div(class="span12")
      h4(ng-visible="isNew") New Publication
      h4(ng-visible="!isNew") Editing {{ publication.pubTitle }}
      h5(ng-visible="!isNew") Publisher: {{ publication.member.fullName }}
      label(for='pubMedia') Publication Medium
      select(name='pubMedia', ng-model="publication.pubMedium", ng-options="p identify by p._id as p.mediaLabel for p in pubMedia")
        option(value="") Choose a media type
      br
      label(for='pubTitle') Publication Title
      input(type="text", ng-model='publication.pubTitle', name="pubTitle")
      br
      label(for='pubYear') Publication Year
      input(type="text", ng-model='publication.pubYear', name="pubYear")
      br
      label(for='pubNotes') Notes
      textarea(ng-model='publication.pubNotes', name="pubNotes")
      h5 Identifiers
        span(style="display: inline-block;")
          button(ng-click="addPubIdentifier()", type="button").offset2.btn.btn-small.btn-primary Add
      div(ng-repeat='indId in publication.industryIdentifiers').row-fluid
        div(class="row-fluid")
          label(for="type-{{$index}}") Type
          input(ng-model="indId.type", type="text", name="type-{{$index}}")
        div(class="row-fluid")
          label(for="identifier-{{$index}}") Identifier
          input(ng-model="indId.identifier", type="text", name="identifier-{{$index}}")
      div(class="row-fluid")
        div(class="span1")
          button(name="SubmitPub", class="btn btn-primary btn-small", ng-click="savePublication(publication)") Save
        div(class="span1 offset2")
          button(name="CancelPub", class="btn btn-small", ng-click="cancelEdit()") Cancel
