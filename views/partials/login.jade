div
  h3 Login
  form.form-horizontal
    .control-group
      label.control-label(for='inputEmail') Email
      .controls
        input#inputEmail(type='text', placeholder='Email', ng-model='user.email')
    .control-group
      label.control-label(for='inputPassword') Password
      .controls
        input#inputPassword(type='password', placeholder='Password', ng-model='user.password')
    .control-group
      .controls
        label.checkbox Remember Me
          input(type='checkbox') 
        button.btn(type='button', ng-click='login()') Sign in
